---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Habilidades · Portafolio">
  <div class="min-h-screen relative overflow-hidden">
    <!-- Fondo mejorado con gradientes y elementos decorativos -->
    <div class="absolute inset-0 bg-gradient-to-br from-indigo-900 via-purple-900 to-blue-900"></div>
    
    <!-- Elementos decorativos de fondo -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10 w-72 h-72 bg-blue-400 rounded-full mix-blend-multiply filter blur-xl animate-pulse-slow"></div>
      <div class="absolute top-40 right-20 w-96 h-96 bg-purple-400 rounded-full mix-blend-multiply filter blur-xl animate-pulse-slow animation-delay-2000"></div>
      <div class="absolute bottom-20 left-1/3 w-80 h-80 bg-indigo-400 rounded-full mix-blend-multiply filter blur-xl animate-pulse-slow animation-delay-4000"></div>
    </div>

    <!-- Patrón de puntos decorativos -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 40px 40px;"></div>
    </div>

    <!-- Contenido principal -->
    <div class="relative z-10">
      <!-- BREADCRUMB -->
      <nav class="bg-white/10 backdrop-blur-lg border-b border-white/20 mt-5 pt-4 sticky top-0 z-20" aria-label="breadcrumb">
        <div class="container mx-auto px-4">
          <ol class="flex space-x-2 py-2 text-sm">
            <li class="flex items-center">
              <a href="/" class="text-blue-200 hover:text-white transition-colors duration-200 flex items-center">
                <i class="bi bi-house-door mr-1"></i>
                Inicio
              </a>
            </li>
            <li class="flex items-center">
              <i class="bi bi-chevron-right text-blue-300 mx-1 text-xs"></i>
            </li>
            <li class="flex items-center text-white" aria-current="page">
              Habilidades
            </li>
          </ol>
        </div>
      </nav>

      <!-- CONTENIDO -->
      <main class="container mx-auto px-4 py-8">
        <!-- Encabezado -->
        <div class="text-center mb-12 animate-fade-in">
          <div class="inline-block p-3 bg-white/10 rounded-2xl backdrop-blur-sm border border-white/20 mb-4">
            <i class="bi bi-stars text-2xl text-yellow-300"></i>
          </div>
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 bg-gradient-to-r from-blue-200 to-purple-200 bg-clip-text text-transparent">
            Mis Habilidades
          </h1>
          <p class="text-lg text-blue-100 max-w-2xl mx-auto">
            Tecnologías y herramientas que utilizo para crear soluciones innovadoras y de alto impacto
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
          <!-- Columna badges -->
          <div class="animate-slide-in-left">
            <div class="bg-white/10 backdrop-blur-lg rounded-2xl shadow-2xl p-6 h-full border border-white/20 hover:bg-white/15 transition-all duration-500 group">
              <div class="flex items-center mb-6">
                <div class="bg-gradient-to-r from-blue-500 to-cyan-500 p-3 rounded-xl mr-3 group-hover:scale-110 transition-transform duration-300">
                  <i class="bi bi-cpu text-white text-xl"></i>
                </div>
                <h2 class="text-2xl font-bold text-white">Tecnologías & Lenguajes</h2>
              </div>

              <!-- Categorías de habilidades -->
              <div class="space-y-6">
                <!-- Base de datos -->
                <div>
                  <h3 class="text-sm font-semibold text-blue-200 mb-3 flex items-center">
                    <div class="w-2 h-2 bg-cyan-400 rounded-full mr-2 animate-pulse"></div>
                    BASES DE DATOS
                  </h3>
                  <div class="flex flex-wrap gap-2">
                    <span class="skill-badge bg-cyan-500/20 text-cyan-100 border border-cyan-400/30 hover:bg-cyan-500/30">Transact-SQL</span>
                    <span class="skill-badge bg-cyan-500/20 text-cyan-100 border border-cyan-400/30 hover:bg-cyan-500/30">SQL Server</span>
                    <span class="skill-badge bg-cyan-500/20 text-cyan-100 border border-cyan-400/30 hover:bg-cyan-500/30">MySQL</span>
                  </div>
                </div>

                <!-- Lenguajes de programación -->
                <div>
                  <h3 class="text-sm font-semibold text-blue-200 mb-3 flex items-center">
                    <div class="w-2 h-2 bg-purple-400 rounded-full mr-2 animate-pulse"></div>
                    LENGUAJES DE PROGRAMACIÓN
                  </h3>
                  <div class="flex flex-wrap gap-2">
                    <span class="skill-badge bg-purple-500/20 text-purple-100 border border-purple-400/30 hover:bg-purple-500/30">Java</span>
                    <span class="skill-badge bg-purple-500/20 text-purple-100 border border-purple-400/30 hover:bg-purple-500/30">C#</span>
                    <span class="skill-badge bg-purple-500/20 text-purple-100 border border-purple-400/30 hover:bg-purple-500/30">PHP</span>
                    <span class="skill-badge bg-purple-500/20 text-purple-100 border border-purple-400/30 hover:bg-purple-500/30">Python</span>
                    <span class="skill-badge bg-purple-500/20 text-purple-100 border border-purple-400/30 hover:bg-purple-500/30">JavaScript</span>
                  </div>
                </div>

                <!-- Frontend -->
                <div>
                  <h3 class="text-sm font-semibold text-blue-200 mb-3 flex items-center">
                    <div class="w-2 h-2 bg-blue-400 rounded-full mr-2 animate-pulse"></div>
                    FRONTEND
                  </h3>
                  <div class="flex flex-wrap gap-2">
                    <span class="skill-badge bg-blue-500/20 text-blue-100 border border-blue-400/30 hover:bg-blue-500/30">HTML5</span>
                    <span class="skill-badge bg-blue-500/20 text-blue-100 border border-blue-400/30 hover:bg-blue-500/30">CSS3</span>
                    <span class="skill-badge bg-blue-500/20 text-blue-100 border border-blue-400/30 hover:bg-blue-500/30">Bootstrap</span>
                    <span class="skill-badge bg-blue-500/20 text-blue-100 border border-blue-400/30 hover:bg-blue-500/30">Tailwind</span>
                    <span class="skill-badge bg-blue-500/20 text-blue-100 border border-blue-400/30 hover:bg-blue-500/30">React</span>
                  </div>
                </div>

                <!-- Backend & Móvil -->
                <div>
                  <h3 class="text-sm font-semibold text-blue-200 mb-3 flex items-center">
                    <div class="w-2 h-2 bg-emerald-400 rounded-full mr-2 animate-pulse"></div>
                    BACKEND & MÓVIL
                  </h3>
                  <div class="flex flex-wrap gap-2">
                    <span class="skill-badge bg-emerald-500/20 text-emerald-100 border border-emerald-400/30 hover:bg-emerald-500/30">Node.js</span>
                    <span class="skill-badge bg-emerald-500/20 text-emerald-100 border border-emerald-400/30 hover:bg-emerald-500/30">Spring Boot</span>
                    <span class="skill-badge bg-amber-500/20 text-amber-100 border border-amber-400/30 hover:bg-amber-500/30">Flutter</span>
                    <span class="skill-badge bg-amber-500/20 text-amber-100 border border-amber-400/30 hover:bg-amber-500/30">Kotlin</span>
                    <span class="skill-badge bg-amber-500/20 text-amber-100 border border-amber-400/30 hover:bg-amber-500/30">Android</span>
                    <span class="skill-badge bg-rose-500/20 text-rose-100 border border-rose-400/30 hover:bg-rose-500/30">Figma</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Columna progress -->
          <div class="animate-slide-in-right">
            <div class="bg-white/10 backdrop-blur-lg rounded-2xl shadow-2xl p-6 h-full border border-white/20 hover:bg-white/15 transition-all duration-500 group">
              <div class="flex items-center mb-6">
                <div class="bg-gradient-to-r from-green-500 to-emerald-500 p-3 rounded-xl mr-3 group-hover:scale-110 transition-transform duration-300">
                  <i class="bi bi-graph-up-arrow text-white text-xl"></i>
                </div>
                <h2 class="text-2xl font-bold text-white">Niveles (autoevaluación)</h2>
              </div>

              <div class="space-y-6">
                <!-- SQL -->
                <div class="skill-item">
                  <div class="flex justify-between mb-2">
                    <span class="font-medium text-white">SQL</span>
                    <span class="text-cyan-300 font-semibold bg-cyan-500/20 px-2 py-1 rounded-lg">90%</span>
                  </div>
                  <div class="w-full bg-white/20 rounded-full h-3 backdrop-blur-sm">
                    <div class="skill-progress bg-gradient-to-r from-cyan-400 to-cyan-600 h-3 rounded-full shadow-lg shadow-cyan-500/25" data-width="90"></div>
                  </div>
                </div>

                <!-- Power BI -->
                <div class="skill-item">
                  <div class="flex justify-between mb-2">
                    <span class="font-medium text-white">Power BI / Reportes</span>
                    <span class="text-emerald-300 font-semibold bg-emerald-500/20 px-2 py-1 rounded-lg">90%</span>
                  </div>
                  <div class="w-full bg-white/20 rounded-full h-3 backdrop-blur-sm">
                    <div class="skill-progress bg-gradient-to-r from-emerald-400 to-emerald-600 h-3 rounded-full shadow-lg shadow-emerald-500/25" data-width="90"></div>
                  </div>
                </div>

                <!-- JavaScript -->
                <div class="skill-item">
                  <div class="flex justify-between mb-2">
                    <span class="font-medium text-white">JavaScript</span>
                    <span class="text-blue-300 font-semibold bg-blue-500/20 px-2 py-1 rounded-lg">75%</span>
                  </div>
                  <div class="w-full bg-white/20 rounded-full h-3 backdrop-blur-sm">
                    <div class="skill-progress bg-gradient-to-r from-blue-400 to-blue-600 h-3 rounded-full shadow-lg shadow-blue-500/25" data-width="75"></div>
                  </div>
                </div>

                <!-- React / Bootstrap -->
                <div class="skill-item">
                  <div class="flex justify-between mb-2">
                    <span class="font-medium text-white">React / Bootstrap</span>
                    <span class="text-amber-300 font-semibold bg-amber-500/20 px-2 py-1 rounded-lg">75%</span>
                  </div>
                  <div class="w-full bg-white/20 rounded-full h-3 backdrop-blur-sm">
                    <div class="skill-progress bg-gradient-to-r from-amber-400 to-amber-600 h-3 rounded-full shadow-lg shadow-amber-500/25" data-width="75"></div>
                  </div>
                </div>

                <!-- Spring Boot / Node.js -->
                <div class="skill-item">
                  <div class="flex justify-between mb-2">
                    <span class="font-medium text-white">Spring Boot / Node.js</span>
                    <span class="text-purple-300 font-semibold bg-purple-500/20 px-2 py-1 rounded-lg">70%</span>
                  </div>
                  <div class="w-full bg-white/20 rounded-full h-3 backdrop-blur-sm">
                    <div class="skill-progress bg-gradient-to-r from-purple-400 to-purple-600 h-3 rounded-full shadow-lg shadow-purple-500/25" data-width="70"></div>
                  </div>
                </div>
              </div>

              <!-- Leyenda -->
              <div class="mt-8 pt-6 border-t border-white/20">
                <h4 class="text-white font-semibold mb-4 text-center">Nivel de Experiencia</h4>
                <div class="flex flex-wrap gap-4 text-sm text-blue-200 justify-center">
                  <div class="flex items-center bg-white/10 px-3 py-2 rounded-lg">
                    <div class="w-3 h-3 bg-cyan-400 rounded-full mr-2 animate-pulse"></div>
                    <span>Principiante</span>
                  </div>
                  <div class="flex items-center bg-white/10 px-3 py-2 rounded-lg">
                    <div class="w-3 h-3 bg-emerald-400 rounded-full mr-2 animate-pulse"></div>
                    <span>Intermedio</span>
                  </div>
                  <div class="flex items-center bg-white/10 px-3 py-2 rounded-lg">
                    <div class="w-3 h-3 bg-purple-400 rounded-full mr-2 animate-pulse"></div>
                    <span>Avanzado</span>
                  </div>
                  <div class="flex items-center bg-white/10 px-3 py-2 rounded-lg">
                    <div class="w-3 h-3 bg-amber-400 rounded-full mr-2 animate-pulse"></div>
                    <span>Experto</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Sección adicional decorativa -->
        <div class="text-center mt-12 animate-fade-in">
          <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-6 border border-white/10">
            <h3 class="text-xl font-semibold text-white mb-2">¿Interesado en colaborar?</h3>
            <p class="text-blue-200 mb-4">No dudes en contactarme para discutir tu próximo proyecto</p>
            <a href="/contacto" class="inline-flex items-center bg-gradient-to-r from-blue-500 to-purple-600 text-white px-6 py-3 rounded-xl font-semibold hover:from-blue-600 hover:to-purple-700 transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl">
              <i class="bi bi-send mr-2"></i>
              Contáctame
            </a>
          </div>
        </div>
      </main>
    </div>
  </div>

  <!-- Estilos personalizados -->
  <style>
    /* Animaciones personalizadas */
    @keyframes fade-in {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes slide-in-left {
      from { opacity: 0; transform: translateX(-30px); }
      to { opacity: 1; transform: translateX(0); }
    }

    @keyframes slide-in-right {
      from { opacity: 0; transform: translateX(30px); }
      to { opacity: 1; transform: translateX(0); }
    }

    @keyframes progress-animation {
      from { width: 0; }
    }

    @keyframes pulse-slow {
      0%, 100% { opacity: 0.1; transform: scale(1); }
      50% { opacity: 0.15; transform: scale(1.05); }
    }

    .animate-fade-in {
      animation: fade-in 0.8s ease-out forwards;
    }

    .animate-slide-in-left {
      opacity: 0;
      animation: slide-in-left 0.8s ease-out 0.2s forwards;
    }

    .animate-slide-in-right {
      opacity: 0;
      animation: slide-in-right 0.8s ease-out 0.4s forwards;
    }

    .animate-pulse-slow {
      animation: pulse-slow 6s ease-in-out infinite;
    }

    .animation-delay-2000 {
      animation-delay: 2s;
    }

    .animation-delay-4000 {
      animation-delay: 4s;
    }

    .skill-badge {
      display: inline-block;
      padding: 0.5rem 1rem;
      border-radius: 9999px;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.3s ease;
      cursor: default;
      backdrop-filter: blur(10px);
    }

    .skill-badge:hover {
      transform: translateY(-2px) scale(1.05);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
    }

    .skill-item {
      opacity: 0;
      transform: translateY(10px);
      animation: fade-in 0.6s ease-out forwards;
    }

    .skill-item:nth-child(1) { animation-delay: 0.6s; }
    .skill-item:nth-child(2) { animation-delay: 0.8s; }
    .skill-item:nth-child(3) { animation-delay: 1.0s; }
    .skill-item:nth-child(4) { animation-delay: 1.2s; }
    .skill-item:nth-child(5) { animation-delay: 1.4s; }

    .skill-progress {
      width: 0;
      animation: progress-animation 1.5s ease-out 0.5s forwards;
      position: relative;
      overflow: hidden;
    }

    .skill-progress::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      background-image: linear-gradient(
        -45deg,
        rgba(255, 255, 255, 0.3) 25%,
        transparent 25%,
        transparent 50%,
        rgba(255, 255, 255, 0.3) 50%,
        rgba(255, 255, 255, 0.3) 75%,
        transparent 75%,
        transparent
      );
      background-size: 1rem 1rem;
      animation: move-stripes 1s linear infinite;
    }

    @keyframes move-stripes {
      0% { background-position: 0 0; }
      100% { background-position: 1rem 0; }
    }
  </style>

  <!-- Script para animaciones adicionales - CORREGIDO -->
  <script>
    // Animación de las barras de progreso al hacer scroll
    document.addEventListener('DOMContentLoaded', function() {
      const progressBars = document.querySelectorAll('.skill-progress');
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const width = entry.target.getAttribute('data-width');
            // SOLUCIÓN: Type assertion para HTMLElement
            const element = entry.target;
            if (element instanceof HTMLElement) {
              element.style.width = `${width}%`;
            }
          }
        });
      }, { threshold: 0.5 });
      
      progressBars.forEach(bar => {
        observer.observe(bar);
      });
    });
  </script>
</BaseLayout>